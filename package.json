{
  "name": "node-api",
  "version": "3.0.0",
  "description": "NodeJS API using ExpressJS and TS",
  "author": "Jayanta Paul",
  "license": "ISC",
  "main": "build/index.ts",
  "scripts": {
    "prepare": "husky install",
    "clean": "tsc --build --clean",
    "build": "rm -rf build && tsc --build",
    "start": "npm run build && node build/src/index.js",
    "start:dev": "npx nodemon",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node build/src/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "release": "standard-version",
    "commit": "cz",
    "test": "npx jest --no-cache --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:cov": "jest --coverage --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest"
  },
  "keywords": [
    "NodeJS",
    "ExpressJS",
    "TS"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jayantapaul-18/node-api.git"
  },
  "bugs": {
    "url": "https://github.com/jayantapaul-18/node-api/issues"
  },
  "homepage": "https://github.com/jayantapaul-18/node-api#readme",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "axios": "^1.4.0",
    "chalk": "^5.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
